/* CATEGORY FILTER */
const categorySelect=document.getElementById("categorySelect");
categorySelect.innerHTML=`<option value="all">All Menu</option>`+
MENU.map((m,i)=>`<option value="${i}">${m.category}</option>`).join("");

categorySelect.addEventListener("change",renderMenu);
document.getElementById("searchInput").addEventListener("input",renderMenu);

/* RENDER */
function renderMenu(){
const grid=document.getElementById("menuGrid");
grid.innerHTML="";
const q=document.getElementById("searchInput").value.toLowerCase();
const cat=categorySelect.value;
const sections=cat==="all"?MENU:[MENU[Number(cat)]];

sections.forEach(section=>{
section.items.filter(i=>i.name.toLowerCase().includes(q)).forEach(i=>{
let priceHtml="";
if("priceSmall" in i){
priceHtml=`<div class='text-success fw-bold'>Small: â‚¹${i.priceSmall ?? "-"} â€¢ Medium: â‚¹${i.priceMedium ?? "-"}</div>`;
}else{
priceHtml=`<div class='text-success fw-bold'>â‚¹ ${i.price}</div>`;
}
grid.innerHTML+=`
<div class="card">
<div class="card-body">
<div class="d-flex justify-content-between">
<h6>${i.name}</h6>
<span class="badge badge-available">Available</span>
</div>
<p class="small text-muted mb-2">${i.desc}</p>
${priceHtml}
<button class="btn btn-dark btn-sm mt-2" onclick='addToCart(${JSON.stringify(i)})'>Add to Cart</button>
</div>
</div>`;
});
});
}
renderMenu();

/* CART */
let cart=[];

function openCart(){
document.getElementById("cartPanel").classList.toggle("d-none");
}

function addToCart(item){
if("priceSmall" in item){ showSizeModal(item); }
else{ cart.push({name:item.name,price:item.price}); updateCart(); }
}

function showSizeModal(item){
document.getElementById("pizzaName").textContent=item.name;
document.getElementById("btnSmall").textContent=`Small - â‚¹${item.priceSmall}`;
document.getElementById("btnMedium").textContent=`Medium - â‚¹${item.priceMedium}`;

document.getElementById("btnSmall").onclick=()=>{
if(item.priceSmall!=null){
cart.push({name:item.name+" (Small)",price:item.priceSmall});
hideSizeModal(); updateCart();
}
};
document.getElementById("btnMedium").onclick=()=>{
cart.push({name:item.name+" (Medium)",price:item.priceMedium});
hideSizeModal(); updateCart();
};

document.getElementById("sizeModal").style.display="block";
}

function hideSizeModal(){
document.getElementById("sizeModal").style.display="none";
}

function updateCart(){
document.getElementById("cartCount").textContent=cart.length;
const box=document.getElementById("cartItems");
box.innerHTML="";
let total=0;
cart.forEach((item,i)=>{
total+=Number(item.price);
box.innerHTML+=`
<div class="d-flex justify-content-between border-bottom py-2">
<div>
<b>${item.name}</b><br>
<small>â‚¹ ${item.price}</small>
</div>
<button class='btn btn-sm btn-danger' onclick='removeItem(${i})'>X</button>
</div>`;
});
document.getElementById("cartTotal").textContent=total;
}

function removeItem(i){
cart.splice(i,1);
updateCart();
}

/* ORDER */
function orderNow(){
if(cart.length===0){ alert("Cart is empty!"); return; }

const table=document.getElementById("tableNo").value;
if(table===""){ alert("Please select table number!"); return; }

const name=prompt("Enter Customer Name:");
if(!name){ alert("Name required!"); return; }

let msg=`ðŸ§¾ *New Order - Advait Cafe*\n\nðŸ‘¤ Name: ${name}\nðŸª‘ Table: ${table}\n\nðŸ½ Order:\n`;
let total=0;
cart.forEach(item=>{ msg+=`â€¢ ${item.name} - â‚¹${item.price}\n`; total+=Number(item.price); });
msg+=`\nðŸ’° Total: â‚¹${total}`;

const phoneNumber="7972003915"; 
window.open(`https://wa.me/${phoneNumber}?text=${encodeURIComponent(msg)}`,"_blank");

cart=[]; updateCart();
document.getElementById("tableNo").value="";
}

